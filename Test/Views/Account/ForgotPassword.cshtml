    <script type="text/javascript">
        $(function () {
            $(".preloader").fadeOut();
        });
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        });

        $('#to-recover').on("click", function () {
            $("#loginform").slideUp();
            $("#recoverform").fadeIn();
        });

        $('#to-cancel').on("click", function () {
            $("#recoverform").hide();
            $("#loginform").fadeIn();
        });
    </script>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
