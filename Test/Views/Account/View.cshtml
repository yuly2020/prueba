@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using Microsoft.AspNetCore.Identity
@using EsteticasII.Data.Entities
@using EsteticasII.ViewModels
@model LoginViewModel
@inject SignInManager<UsuarioEntity> SignInManager

@{
		Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<form class="form-horizontal form-material" id="loginform" asp-action="Login" asp-controller="Account" method="post">

		<a href="javascript:void(0)" class="text-center db"><br /><img src="~/img/logo/logo-sistemas-login.png" alt="Home" /></a><br /><br /><br />

		<div class="form-group m-t-20">
				<div class="col-xs-12">
						<input asp-for="Email" class="form-control" />
				</div>
		</div>
		<div class="form-group">
				<div class="col-xs-12">
						<input asp-for="Password" class="form-control" />
				</div>
		</div>
		<div class="form-group row">
				<div class="col-md-12">
						<div class="custom-control custom-checkbox">
								<input asp-for="RememberMe" />
								<label asp-for="RememberMe" class="custom-control-label" for="RememberMe">@Html.DisplayNameFor(m => m.RememberMe)</label>
								<a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i>Recuperar contraseña</a>
						</div>
				</div>
		</div>
		<div class="form-group text-center m-t-20">
				<div class="col-xs-12">
						<button class="btn btn-info btn-lg btn-block btn-rounded" type="submit" style="height:50px;">Iniciar Sesión</button>
				</div>
		</div>
</form>

<form asp-action="ForgotPassword" method="post" class="form-horizontal" id="recoverform">
		<div class="form-group ">
				<div class="col-xs-12">
						<h3>Recuperar contraseña</h3>
						<p class="text-muted">¡Ingresa tu dirección de correo electrónico y sigue las instrucciones que te enviaremos! </p>
				</div>
		</div>
		<div class="form-group ">
				<div class="col-xs-12">
						<input asp-for="Email" class="form-control" placeholder="Email" />
				</div>
		</div>
		<div class="form-group text-center m-sm-auto">
				<div class="col-xs-12">
						<button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Recuperar</button>
				</div>
		</div>
</form>

<script type="text/javascript">
		$(function () {
				$(".preloader").fadeOut();
		});
		$(function () {
				$('[data-toggle="tooltip"]').tooltip()
		});

		$('#to-recover').on("click", function () {
				$("#loginform").slideUp();
				$("#recoverform").fadeIn();
		});
</script>

@section Scripts {
		@await Html.PartialAsync("_ValidationScriptsPartial")
}